<div class="container">
    <!-- Jumbotron -->

    <div class="jumbotron text-center mt-3">
        <h1 class="diplay-4 text-success pb-3">Annoying New Age Hambugers</h1>
        <p class="lead">Order Burger By Name Below or Enter the Name of a Custom Burger</p>
        <h2 class="m-3">Menu</h2>
        <div class="container">
            <div class="menu-group mt-3 mb-5 p-5">
                <div class="row">
                    <div class="col-md-4">
                        <img class="burgerImg" src="/yoga.png" alt="hamburger">
                    </div>
                    <div class="col-md-4">
                        <ul class="burger-menu text-left list-group">
                            <li class="list-group-item list-group-item-success">Burger of Wisdom</li>
                            <li class="list-group-item list-group-item-success">Burger of Anger</li>
                            <li class="list-group-item list-group-item-success">Burger of Tranquility</li>
                            <li class="list-group-item list-group-item-success">Burger of Enlightenment</li>
                            <li class="list-group-item list-group-item-success">Burger of your Dead Ancestors</li>
                            <li class="list-group-item list-group-item-success">Burger of Awesomeness</li>
                        </ul>
                    </div>
                    <div class="col-md-4">
                        <ul class="burger-menu text-left list-group">
                            <li class="list-group-item list-group-item-success">Burger of Spirituality</li>
                            <li class="list-group-item list-group-item-success">Burger of Sadness</li>
                            <li class="list-group-item list-group-item-success">Burger of Burger of Circular Logic</li>
                            <li class="list-group-item list-group-item-success">Burger of Solar Energy</li>
                            <li class="list-group-item list-group-item-success">Burger of Vegtables No One Likes</li>
                            <li class="list-group-item list-group-item-success">Burger of Compassion</li>
                        </ul>
                    </div>

                </div> <!-- end row -->
            </div> <!-- end menu-group -->
        </div> <!-- end container -->
        
        <form>
            <div class="form-group">
                <label for="name"><h3>Order Here</h3></label>
                <input class="form-control" type="text" id="burger-name" placeholder="Burger Name">
            </div>
        </form>
        <button id="submit-burger" class="btn btn-success btn-lg" type="button">Order Burger</button>
    </div>
</div> <!-- end container -->
<!-- two column layout -->

<!-- Burgers Ordered Column -->
<div class="container mb-3">
    <!-- change this to columns of lists; see traversy -->
    <div class="results-group mb-5 p-5">
        <div class="row">
            <div class="col-md-6 ordered"> <!-- ordered column -->
                <h2 class="mb-3">Uneaten Burgers</h2>
                <p>Click on Burger in Order to Eat It &#40; ...spiritually&#41;</p>
                <ul class="ordered-burgers text-left list-group">
                    {{#each burgers}}
                        {{#unless devoured}}
                            <li class="list-group-item list-group-item-secondary">{{burger_name}}</li>
                        {{/unless}}
                    {{/each}}
                </ul>
            </div> <!-- end ordered column -->

            <!-- Devoured Column -->
            <div class="col-md-6 devoured">
                <h2 class="mb-3">Devoured Burgers</h2>
                <p>Your Mana has Been Altered or ...Something ...Words</p>
                <ul class="devoured-burgers text-left list-group">
                    {{#each burgers}}
                        {{#if devoured}}
                            <li class="list-group-item list-group-item-danger">{{burger_name}}</li>
                        {{/if}}
                    {{/each}}
                </ul>
            </div> <!-- end second column -->
        </div> <!-- end row -->
    </div> <!-- tables group -->
</div> <!-- end conatiner -->
